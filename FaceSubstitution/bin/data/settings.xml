<screenshots>
	<enabled>1</enabled>
	<interval>120</interval> <!-- all durations are specified in seconds -->
	<showDuration>2</showDuration> <!-- time the screenshot is shown fullscreen -->
	<location>screenshots</location>
	<screenshotWidth>432</screenshotWidth>
	<screenshotHeight>768</screenshotHeight>
	<cameraCapturesLocation>screenshots\camera</cameraCapturesLocation>
	<thumbnailsLocation>screenshots\thumbs</thumbnailsLocation>
	<thumbWidth>90</thumbWidth>
	<thumbHeight>160</thumbHeight>

	<upload>1</upload>
	<sharingUrl>www.fultonia.nl/sprookjesfeest/</sharingUrl>
	<sharingMessage>Foto sharen?</sharingMessage>
	<ftp>
		<host>192.168.1.3</host>
		<port>21</port>
		<user>fotoupload</user>
		<password>fotoupload</password> 
		<remoteLocation>/var/www/fultonia/sprookjesfeest/screenshots/</remoteLocation>
		<remoteCameraCapturesLocation>/var/www/fultonia/sprookjesfeest/screenshots/camera</remoteCameraCapturesLocation>
		<remoteThumbnailsLocation>/var/www/fultonia/sprookjesfeest/screenshots/thumbs</remoteThumbnailsLocation>
	</ftp>
</screenshots>
<camera>
	<width>640</width>
	<height>480</height>
</camera>
<tracker>
	<iterations>25</iterations> <!-- [1-25] 1 is fast and inaccurate, 25 is slow and accurate -->
	<clamp>3</clamp> <!-- [0-4] 1 gives a very loose fit, 4 gives a very tight fit -->
	<tolerance>1</tolerance> <!-- [.01-1] match tolerance -->
	<attempts>4</attempts> <!-- [1-4] 1 is fast and may not find faces, 4 is slow but will find faces -->
	<switchTextureOnNewFace>1</switchTextureOnNewFace>
	<faceSwitchMinDistance>100</faceSwitchMinDistance> <!-- minimum distance in pixels between detected faces to trigger a texture switch -->
</tracker>
<display>
	<position>
		<x>0</x>
		<y>0</y>
	</position>
  <size>
    <x>1080</x>
    <y>1920</y>
  </size>
</display>
